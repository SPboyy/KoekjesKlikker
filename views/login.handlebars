<link rel="stylesheet" href="/stylesheets/login.css">
<main id="login-page">
  <div class="header">
    <img src="images/cookie.png" width="20%" alt="Cookie">
    <h1>COOKIE</h1>
    <h1>CLICKER</h1>
  </div>

  <form id="loginForm" method="POST" action="/login">
    <div>
      <input type="text" id="username" name="username" placeholder="Username" required value="{{enteredUsername}}">
      {{#if hasError}}
        {{#if UsernameError}}
          <p class="error">{{UsernameError}}</p>
        {{/if}}
      {{/if}}
    </div>

    <div>
      <input type="password" id="password" name="password" placeholder="Password" required>
      {{#if hasError}}
        {{#if PasswordError}}
          <p class="error">{{PasswordError}}</p>
        {{/if}}
      {{/if}}
    </div>

    <div>
      <button type="submit" id="login-button">LOG IN</button>
    </div>
  </form>

  <a href="/signup">
    <button type="button" id="sign-in-button">Sign up</button>
  </a>
</main>