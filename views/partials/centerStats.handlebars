  <script>
    async function fetchStats() {
  try {
    const response = await fetch('/get-stats');
    if (!response.ok) throw new Error('Network response was not ok');
    const statsData = await response.json();

    const values = [
      statsData.amountOfCookies,       // Current Cookies
      statsData.totalCookies,          // Total cookies
      statsData.totalRebirths,         // Total rebirths
      statsData.timePlayed,            // Time played
      statsData.totalBuildings,        // Total buildings
      statsData.cps,                   // Cookies per second (cps)
      statsData.cpc                    // Cookies per click (cpc)
    ];

    const columnShort = document.querySelector('.columnshort');
    const pElements = columnShort.querySelectorAll('p');

    pElements.forEach((p, i) => {
      if (values[i] !== undefined) {
        p.textContent = values[i];
      }
    });
  } catch (error) {
    console.error('Failed to fetch stats:', error);
  }
}

document.addEventListener('DOMContentLoaded', () => {
  fetchStats();                   // Fetch immediately on page load
  setInterval(fetchStats, 20000); // Repeat every 20 seconds
});
  </script>
